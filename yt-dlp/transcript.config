--write-subs
--write-auto-sub
--sub-lang 'en, en-orig, en-622K5vICg3U'
--sub-format ttml 
# Don't download any video formats
--skip-download

--write-comments

--write-info-json
# Save all under video directory 
-o ~/Onedrive/Video/%(title)s_transcript/%(title)s.%(ext)s
# alternately, save all under root video 
# -0 ~/Onedrive/Video/%(title)s.%(ext)s

# clean filenames
--windows-filenames
--replace-in-metadata title ":" "--"
--replace-in-metadata title "&" "and"
--replace-in-metadata title " " "-"
--replace-in-metadata title "\?" ""
# line below added to avoid loading in the default config file 'config' also found in this directory
--ignore-config

